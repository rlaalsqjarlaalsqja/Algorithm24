def printStep(arr, val):
    print("Step %2d= " % val, end='')
    print(arr)

def selection_sort(A):
    n = len(A)
    for i in range(n-1):
        least = i  # least 변수 초기화
        for j in range(i+1, n):
            if A[j] < A[least]:
                least = j
        A[i], A[least] = A[least], A[i]  # 최소값과 현재 인덱스의 요소 교환
        printStep(A, i+1)

data = [5, 3, 8, 4, 9, 1, 6, 2, 7]
print("Original : ", data)
selection_sort(data)
print("Selection : ", data)